<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Products</h1>
        <p>
          <%= link_to 'New Product', new_product_path, class: "btn btn-primary my-2" if user_signed_in? %>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @products.each do |product| %>
          <div class="col">
            <div class="card shadow-sm">
              <% if product.photo.attached? %>
                <%= image_tag(product.photo, width: "100%", height: "225") %> 
              <% else %>
                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> 
              <% end %>

              <div class="card-body">
                <p class="card-text"><%= product.name %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "View", product, class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to "Edit", edit_product_path(product) ,class: "btn btn-sm btn-outline-secondary" if user_signed_in? %>
                  </div>
                  <small class="text-muted">$<%= product.price %></small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</main>