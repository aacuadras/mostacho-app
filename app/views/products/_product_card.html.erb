<div class="col">
    <div class="card shadow-sm">
        <% if product.photo.attached? %>
            <%= image_tag(product.photo, width: "100%", height: "225") %> 
        <% else %>
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> 
        <% end %>

        <div class="card-body">
            <p class="card-text" id="name_<%= product.id %>"><%= product.name %></p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <% if user_signed_in? %>
                        <%= link_to "Edit", edit_product_path(product) ,class: "btn btn-sm btn-outline-secondary", remote: true, "data-bs-toggle" => "modal", "data-bs-target" => "#exampleModal" %>
                        <%= link_to "Delete", product, class: "btn btn-sm btn-outline-danger", method: :delete %>
                    <% end %>
                </div>
                <small class="text-muted" id="price_<%= product.id %>">$<%= product.price %></small>
            </div>
        </div>
    </div>
</div>