<section class="mt-3">
  <!--Grid row-->
  <div class="row">
    <!--Grid column-->
    <div class="col-lg-8">
        <!-- Card -->
        <div class="card wish-list mb-3">
            <div class="card-body">
                <h5 class="mb-4">Productos</h5>
                <% @invoices.each do |i| %>
                    <div class="row mb-4">
                        <div class="col-md-5 col-lg-3 col-xl-3">
                            <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                <% if i.product.photo.attached? %>
                                    <%= image_tag i.product.photo, class: "img-fluid w-100"%>
                                <% else %>
                                    <img class="img-fluid w-100" src="https://expertphotography.com/wp-content/uploads/2019/03/Chocolate-Cake-Darina-Kopcok-Expert-Phtography.jpg" alt="Sample">
                                <% end %>
                            </div>
                        </div>
                        <div class="col-md-7 col-lg-9 col-xl-9">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5><%= i.product.name %></h5>
                                        <h5>Cantidad: <%= i.quantity %></h5>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <p class="mb-0"><span><strong>$<%= i.product.price %></strong></span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">
                <% end %>
            </div>
        </div>
        <!-- Card -->

      <!-- Card -->

    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-lg-4">

      <!-- Card -->
      <div class="card mb-3">
        <div class="card-body">

          <h5 class="mb-3">Informaci√≥n de Orden</h5>

          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Nombre
              <span><%= @order.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Estado
              <span><%= @order.get_status %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Fecha de Entrega
              <span><%= @order.delivery_date %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
              <div>
                <strong>Total</strong>
              </div>
              <span id="totalCost"><strong>$<%= @order.get_price %></strong></span>
            </li>
          </ul>

          <%= link_to 'Editar', edit_order_path(@order), class: "btn btn-primary btn-block waves-effect waves-light" %>
          <%= link_to 'Eliminar', @order, class: "btn btn-danger btn-block waves-effect waves-light", method: :delete, data: { confirm: 'Segura?' } %>

        </div>
      </div>
      <!-- Card -->

    </div>
    <!--Grid column-->

  </div>
  <!--Grid row-->
</section>
<!--Section: Block Content-->