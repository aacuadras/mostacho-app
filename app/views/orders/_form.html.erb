<!--Section: Block Content-->
<section>
<%= simple_form_for @order do |f| %>
  <!--Grid row-->
  <div class="row">
    <!--Grid column-->
    <div class="col-lg-8">
        <!-- Card -->
        <div class="card wish-list mb-3">
            <div class="card-body">
                <h5 class="mb-4">Products</h5>
                <%= f.simple_fields_for :products do |ff| %>
                    <% @products.each do |p| %>
                        <div class="row mb-4">
                            <div class="col-md-5 col-lg-3 col-xl-3">
                                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                    <img class="img-fluid w-100"
                                    src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/12a.jpg" alt="Sample">
                                </div>
                            </div>
                            <div class="col-md-7 col-lg-9 col-xl-9">
                                <div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5><%= p.name %></h5>
                                        </div>
                                        <div>
                                            <div class="def-number-input number-input safari_only mb-0 w-100">
                                                <button type="button" onclick="subNum(<%= p.id %>)" class="minus" id="subBtn[<%= p.id %>]"> - </button>
                                                <%= ff.input_field p.id.to_s, class: 'quantity', label: false, readonly: true, value: Invoice.find_by(order_id: @order.id, product_id: p.id).nil? ? 0 : Invoice.find_by(order_id: @order.id, product_id: p.id).quantity %>
                                                <button type="button" onclick="addNum(<%= p.id  %>)" class="plus" id="addBtn[<%= p.id %>]"> + </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="mb-0"><span><strong>$<%= p.price %></strong></span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                    <% end %>
                <% end %>     
            </div>
        </div>
        <!-- Card -->

      
        <% if controller.action_name == "edit" %>
            <!-- Card -->
            <div class="card mb-3">
                <div class="card-body">

                <h5 class="mb-4">Delivery Date</h5>
                <%= f.input :status, collection: ['active', 'ready_to_deliver', 'complete'], class: "mb-0", input_html: {value: @order.status} %>
                
                </div>
            </div>
            <!-- Card -->
        <% end %>

      <!-- Card -->

    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-lg-4">

      <!-- Card -->
      <div class="card mb-3">
        <div class="card-body">

          <h5 class="mb-3">Order Information</h5>

          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Name
              <span><%= f.input :name, label: false %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Delivery Date
              <span><%= f.input :delivery_date, as: :date, html5: true, label: false, input_html: {value: Date.today} %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
              <div>
                <strong>The total amount of</strong>
                <strong>
                  <p class="mb-0">(including VAT)</p>
                </strong>
              </div>
              <span><strong>$53.98</strong></span>
            </li>
          </ul>

          <%= f.button :submit, class: "btn btn-primary btn-block waves-effect waves-light" %>

        </div>
      </div>
      <!-- Card -->

    </div>
    <!--Grid column-->

  </div>
  <!--Grid row-->
<% end %>
</section>
<!--Section: Block Content-->

<script>
  function addNum(product_id) {
    num_field = document.querySelector(`input[name="order[products][${product_id}]"]`);
    val = num_field.value;
    if(val < 10) {
      num_field.value = parseInt(val, 10) + 1;
    }
  }

  function subNum(product_id) {
    num_field = document.querySelector(`input[name="order[products][${product_id}]"]`);
    val = num_field.value;
    if(val > 0) {
      num_field.value = parseInt(val, 10) - 1;
    }
  }
</script>