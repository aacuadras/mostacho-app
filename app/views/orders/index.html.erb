<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Orders</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Total Price</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.name, order %></td>
          <td>$<%= order.get_price %></td>
          <td><%= order.get_status %></td>
          <td><%= link_to 'Change Status', update_status_path(order), class: 'btn btn-primary', method: :patch %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order_path, class: "btn btn-success" %>
</div>