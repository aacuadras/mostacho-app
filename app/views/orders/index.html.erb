<main class="container">
  <div class="my-3 p-3 bg-body rounded shadow-sm">
    <h6 class="border-bottom pb-2 mb-0">Órdenes Activas</h6>
    <% @active_orders.each do |order| %>
      <%= link_to order, class: "order-link" do %>
        <div class="d-flex text-muted pt-3">
          <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>

          <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
            <div class="d-flex justify-content-between">
              <strong class="text-gray-dark"><%= order.name %> ($<%= order.get_price %>)</strong>
              <%= link_to 'Cambiar Estado', update_status_path(order), method: :patch %>
            </div>
            <span class="d-block">Fecha de Entrega: <strong><%= order.delivery_date.strftime("%d/%m/%Y") %></strong>, Estado: <strong><%= order.get_status %></strong> </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="my-3 p-3 bg-body rounded shadow-sm">
    <h6 class="border-bottom pb-2 mb-0">Órdenes Completadas (20 más recientes)</h6>
    <% @completed_orders.each do |order| %>
      <%= link_to order, class: "order-link" do %>
        <div class="d-flex text-muted pt-3">
          <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>

          <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
            <div class="d-flex justify-content-between">
              <strong class="text-gray-dark"><%= order.name %> ($<%= order.get_price %>)</strong>
            </div>
            <span class="d-block">Fecha de Entrega: <strong><%= order.delivery_date.strftime("%d/%m/%Y") %></strong>, Estado: <strong><%= order.get_status %></strong> </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</main>